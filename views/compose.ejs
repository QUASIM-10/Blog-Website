<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="textTitle" class="form-control" placeholder="" autocomplete="">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea name="publishText" class="form-control" placeholder="" rows="5" style="width: 100%;"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

